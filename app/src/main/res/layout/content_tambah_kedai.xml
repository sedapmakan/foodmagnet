<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamkeropok.com.foodmagnet.TambahKedai"
    tools:showIn="@layout/activity_tambah_kedai">




    <!-- our toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />





    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/et_nama_kedai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label"
        android:layout_toEndOf="@+id/section_label"
        android:layout_toRightOf="@+id/section_label"
        android:ems="10"
        android:inputType="textCapWords|textPersonName"
        android:text="Nama Kedai"
        tools:layout_editor_absoluteY="192dp"
        tools:layout_editor_absoluteX="43dp" />

    <EditText
        android:id="@+id/et_alamat_kedai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_nama_kedai"
        android:layout_alignRight="@+id/et_nama_kedai"
        android:layout_below="@+id/et_nama_kedai"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Alamat"
        tools:layout_editor_absoluteX="43dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/et_no_telepon_kedai"
        android:layout_width="197dp"
        android:layout_height="38dp"
        android:layout_below="@+id/et_alamat_kedai"
        android:layout_toEndOf="@+id/section_label"
        android:layout_toRightOf="@+id/section_label"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="No Telefon"
        tools:layout_editor_absoluteY="278dp"
        tools:layout_editor_absoluteX="43dp" />

    <Spinner
        android:id="@+id/spinnerJenisMakanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_no_telepon_kedai"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_no_telepon_kedai"
        android:layout_below="@+id/et_no_telepon_kedai"
        android:entries="@array/arr_jenis_makanan"
        tools:layout_editor_absoluteY="322dp"
        tools:layout_editor_absoluteX="43dp" />

    <Button
        android:id="@+id/bt_tambah_kedai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Kedai"
        android:layout_below="@+id/spinnerJenisMakanan"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label"
        tools:layout_editor_absoluteY="378dp"
        tools:layout_editor_absoluteX="72dp" />






</android.support.constraint.ConstraintLayout>
