<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teamkeropok.com.foodmagnet.ViewKedai">


    <TextView
        android:id="@+id/tv_nama_kedai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="33dp"
        android:text="Nama Kedai" />

    <TextView
        android:id="@+id/tv_alamat_kedai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_nama_kedai"
        android:layout_below="@+id/tv_nama_kedai"
        android:layout_marginTop="18dp"
        android:text="Alamat" />

    <TextView
        android:id="@+id/tv_no_telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="No Phone"
        android:layout_below="@+id/tv_alamat_kedai"
        android:layout_alignStart="@+id/tv_alamat_kedai" />

    <TextView
        android:id="@+id/tv_jenis_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Jenis Makanan"
        android:layout_below="@+id/tv_no_telefon"
        android:layout_alignEnd="@+id/tv_nama_kedai" />

    <TextView
        android:id="@+id/tv_waktu_operasi_buka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="8am"
        android:layout_below="@+id/tv_jenis_makanan"
        android:layout_alignEnd="@+id/tv_nama_kedai" />



</RelativeLayout>
